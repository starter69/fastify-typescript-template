{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "esnext",
    "lib": ["ESNEXT"],
    "noEmit": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
